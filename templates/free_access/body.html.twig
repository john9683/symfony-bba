{% extends 'base.html.twig' %}

{% block body %}

<nav class="navbar navbar-light bg-light static-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_homepage') }}">BlaBlaArticle</a>

        {% if showPartialNavbarMiddle is defined %}
            {% include 'free_access/partial/navbar_middle.html.twig' %}
        {% endif %}

        <a class="btn btn-primary" href="{{ path('app_login') }}">Войти</a>
    </div>
</nav>

<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                {% for flash in app.flashes('registration_success') %}
                    <div class="alert alert-warning text-center">{{ flash }}</div>
                {% endfor %}
                <h1 class="mb-5">Создай уникальную статью идеально подходящую для вашего бизнеса, сайта или проекта!</h1>
            </div>

            {% if showPartialBtnTry is defined %}
                {% include 'free_access/partial/btn_try.html.twig' %}
            {% endif %}

        </div>
    </div>
</header>

{% block body_content %}{% endblock %}

<footer class="footer bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                <p class="text-muted small mb-4 mb-lg-0">&copy; BlaBlaArticle 2020.</p>
            </div>
            <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item mr-3">
                        <a href="#"><i class="fab fa-facebook fa-2x fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item mr-3">
                        <a href="#"><i class="fab fa-vk fa-2x fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="fab fa-instagram fa-2x fa-fw"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

{% endblock %}